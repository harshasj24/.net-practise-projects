@model User
<style>
    .reg--wrapper {
        height: calc(100vh - 80px);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }
    .card {
        width:30vw;
    }
</style>
<div class="reg--wrapper">
    <div class="card ">
        <div class="card-body">
            <form class="form" method="post" asp-action="Register">
                <label asp-for="@Model.Name" class="form-label">Name</label>
                <input asp-for="@Model.Name" class="form-control" />
                <label asp-for="@Model.Email" class="form-label">Emial</label>
                <input asp-for="@Model.Email" class="form-control" />
                <label asp-for="@Model.Password" class="form-label">Password</label>
                <input asp-for="@Model.Password" class="form-control" />
                <label asp-for="@Model.PhoneNumber" class="form-label">Phone Number</label>
                <input asp-for="@Model.PhoneNumber" class="form-control" />
                <label asp-for="@Model.Role" class="form-label">Role</label>
                <select asp-for="@Model.Role" class="form-select" aria-label="Default select example">
                    <option selected>Select role</option>
                    <option value="user">User</option>
                    <option value="admin">Admin</option>
                </select>
        
                <button class="btn btn-dark mt-3" type="submit">Login</button>

            </form>
        </div>

        <div class="modal" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Modal title</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>Modal body text goes here.</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>